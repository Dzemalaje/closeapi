{
  "swagger": "2.0",
  "info": {
    "title": "Close CRM API",
    "version": "1.0.0",
    "description": "API specification for Close CRM integration"
  },
  "host": "api.close.com",
  "basePath": "/api/v1",
  "schemes": ["https"],
  "paths": {
    "/lead": {
      "get": {
        "summary": "Get a list of leads",
        "description": "Retrieve all leads from Close CRM.",
        "security": [
          {
            "closeApiKey": []
          }
        ],
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "description": "Filter leads by status",
            "required": false,
            "type": "string",
            "enum": ["open", "won", "lost"]
          }
        ],
        "responses": {
          "200": {
            "description": "A list of leads",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "status": {
                    "type": "string"
                  },
                  "created_at": {
                    "type": "string",
                    "format": "date-time"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "closeApiKey": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "API Key for Close CRM (format: 'Bearer YOUR_API_KEY')"
    }
  }
}
