{
  "openapi": "3.0.0",
  "info": {
    "title": "Close CRM API",
    "version": "1.0.0",
    "description": "Close CRM integration for Toddle"
  },
  "servers": [
    {
      "url": "https://api.close.com/api/v1"
    }
  ],
  "paths": {
    "/lead": {
      "get": {
        "operationId": "getLeads",
        "summary": "Retrieve leads",
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "description": "Lead status filter",
            "schema": {
              "type": "string",
              "enum": ["open", "won", "lost"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" },
                      "name": { "type": "string" },
                      "status": { "type": "string" },
                      "created_at": { "type": "string", "format": "date-time" }
                    }
                  }
                }
              }
            }
          }
        },
        "security": [{"apiKey": []}]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "apiKey": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    }
  }
}
